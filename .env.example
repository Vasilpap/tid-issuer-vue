# Backend API base URL
# For development: http://localhost:8080
# For production: Your production backend URL
VITE_API_BASE=http://localhost:8080

# Keycloak Configuration
# URL where Keycloak is hosted
VITE_KEYCLOAK_URL=http://localhost:8180

# Keycloak realm name (must match the realm configured in Keycloak)
VITE_KEYCLOAK_REALM=tid-issuer

# Keycloak client ID (must match the client configured in Keycloak)
# vue-spa is the public client for the Vue frontend
VITE_KEYCLOAK_CLIENT_ID=vue-spa

# The API client where roles are defined (used for role checking)
VITE_KEYCLOAK_API_CLIENT_ID=quarkus-api
